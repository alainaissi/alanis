{% extends 'layout.html.twig' %}

{% block content %}
    <h1>Liste clients</h1>
    <ul>
        {% for user in users %}
            <li><a href="/users/show?id={{ user.id }}">{{ user.id }}.  {{ user.firstname }} {{ user.lastname }}</a></li>
        {% else %}
            <li>Aucun utilisateur</li>
        {% endfor %}
    </ul>
    <a href="/users/add"><button>Nouvel utilisateur</button></a>
{% endblock %}